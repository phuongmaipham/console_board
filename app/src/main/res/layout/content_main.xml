<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.phuongpham.consoleboard.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/square"
        android:src="@drawable/square"
        android:layout_below="@+id/triangle"
        android:layout_toStartOf="@+id/cross" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circle"
        android:src="@drawable/circle"
        android:layout_alignTop="@+id/square"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cross"
        android:src="@drawable/cross"
        android:layout_above="@+id/my_right"
        android:layout_toStartOf="@+id/circle" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/triangle"
        android:src="@drawable/triangle"
        android:layout_alignTop="@+id/start"
        android:layout_toEndOf="@+id/square" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:src="@drawable/back"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start"
        android:src="@drawable/start"
        android:layout_alignTop="@+id/up"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_right"
        android:src="@drawable/my_right"
        android:layout_below="@+id/back"
        android:layout_alignStart="@+id/cross" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right"
        android:src="@drawable/right"
        android:layout_alignBottom="@+id/left"
        android:layout_toEndOf="@+id/up" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left"
        android:src="@drawable/left"
        android:layout_alignTop="@+id/square"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/down"
        android:src="@drawable/down"
        android:layout_above="@+id/my_left"
        android:layout_toStartOf="@+id/right" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/up"
        android:src="@drawable/up"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/left" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_left"
        android:src="@drawable/my_left"
        android:layout_below="@+id/back"
        android:layout_toStartOf="@+id/right" />
</RelativeLayout>
